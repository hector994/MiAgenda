<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTituloFilaContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="nombre"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/tvTelefonoFilaContacto"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTituloFilaContacto"
        android:layout_alignStart="@+id/tvTituloFilaContacto"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="telefono"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <Button
        android:id="@+id/btnVerContacto"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:layout_below="@+id/tvTelefonoFilaContacto"
        android:layout_alignEnd="@+id/tvTelefonoFilaContacto"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="10dp"
        android:background="#1c3d57"
        android:text="Ver Contacto"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

</RelativeLayout>